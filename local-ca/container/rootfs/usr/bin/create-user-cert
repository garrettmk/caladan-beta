#!/bin/sh

# Generate the private key
openssl \
  genrsa \
  -des3 \
  -aes-256-cbc \
  -out /data/$1.key \
  2048

# Make it private and read-only
chmod 0400 /data/$1.key

# Generate the CSR
openssl \
  req \
  -new \
  -key /data/$1.key \
  -out /tmp/$1.csr

# Sign the CSR and produce a certificate
openssl x509 \
  -req \
  -days 365 \
  -in /tmp/$1.csr \
  -extfile /config/users.cnf \
  -CA /data/ca.crt \
  -CAkey /data/ca.key \
  -CAcreateserial \
  -addtrust emailProtection \
  -addreject serverAuth \
  -trustout \
  -out /data/$1.crt

# Make it read-only
chmod 0444 /data/$1.crt

# Export the cert into PKCS12 format
openssl pkcs12 \
  -export \
  -in /data/$1.crt \
  -inkey /data/$1.key \
  -out /data/$1.p12

# Make it read-only and private
chmod 0400 /data/$1.p12

# Clean up the CSR
rm -f /tmp/$1.csr