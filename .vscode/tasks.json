{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "local-ca: install CA",
      "type": "shell",
      "command": "sudo commands/install.sh",
      "options": {
        "cwd": "${workspaceFolder}/local-ca"
      }
    },
    {
      "label": "local-ca: uninstall CA",
      "type": "shell",
      "command": "sudo commands/uninstall.sh",
      "options": {
        "cwd": "${workspaceFolder}/local-ca"
      }
    },
    {
      "label": "local-ca: install CA certificate",
      "type": "shell",
      "command": "sudo commands/install-ca-cert.sh",
      "options": {
        "cwd": "${workspaceFolder}/local-ca"
      }
    },
    {
      "label": "local-ca: run command",
      "type": "shell",
      "command": "sudo commands/run-in-container.sh ${input:command}",
      "options": {
        "cwd": "${workspaceFolder}/local-ca"
      }
    },
  ],

  "inputs": [
    {
      "id": "flags",
      "type": "promptString",
      "description": "Podman flags",
      "default": "-it"
    },
    {
      "id": "command",
      "type": "pickString",
      "description": "Choose a command",
      "options": [
        "create-signed-cert",
        "create-p12",
        "create-user-cert",
        "create-ca-cert",
        "busy",
        "/bin/sh"
      ],
      "default": "busy"
    },
    {
      "id": "certFilesName",
      "type": "promptString",
      "description": "Name prefix for cert files",
      "default": "example.caladan.home",
    },
    {
      "id": "copyToDirectory",
      "type": "promptString",
      "description": "Copy files to directory",
      "default": "./"
    }
  ]
}